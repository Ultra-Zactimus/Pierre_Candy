@{
  Layout = "_Layout";
}

@using Candyman.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <p><em>No flavors have been added. Would you like to add some?</em></p>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<h3>@Html.ActionLink("Add A New Flavor", "Create")</h3>