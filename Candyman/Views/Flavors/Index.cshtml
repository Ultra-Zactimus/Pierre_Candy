@{
  Layout = "_Layout";
}

<div id="push-up"></div>

@using System.Security.Claims
@using Candyman.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <p><em>No flavors have been added. Would you like to add some?</em></p>
} 

  @foreach(Flavor flavor in Model)
  {
    <h3><strong>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</strong></h3>
  }
<div id="push-down"></div>
@if (User.Identity.IsAuthenticated)
{
  <h5><strong>@Html.ActionLink("Add A New Flavor", "Create")</strong></h5>
}
<div id="push-down"></div>