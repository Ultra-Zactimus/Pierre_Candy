@{
  Layout = "_Layout";
}

@model Candyman.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<label>Flavor Description: </label>
<h5>@Html.DisplayFor(model => model.Description)</h5>

@if(@Model.JoinEntities.Count == 0)
{
  <p><em>This Flavor has not been attributed to a Treat yet</em></p>
}
else
{
  <h4>Treats that share this flavor:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Treat.Name</li>
  }
  </ul>
}
<h3><strong>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</strong></h3>
<h3><strong>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</strong></h3>